/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

Page {
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-family: PingFang SC;
  font-weight: 400;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  color: rgba(0, 0, 0, 0.4);
}

.power {
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
  font-size: 32rpx;
  font-weight: 400;
}

.power_info {
  padding: 15rpx 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.power_info_text {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.power_info_text_icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.power_info_text_title {
  font-weight: 600;
}

.power_info_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 30rpx;
}

.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.power_item_title, .power_item_tip {
  font-size: 32rpx;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  margin: 0 auto;
  height: 1rpx;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.1);
}

.foot {
  color: rgba(0, 0, 0, 0.4);
  font-size: 30rpx;
  position: fixed;
  bottom: 100rpx;
}

.button {
  width: 200rpx;
  text-align: center;
  margin: 0 auto 0 auto;
  height: 80rpx;
  color: white;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: #07C160;
  font-size: 30rpx;
}

.button_clear {
  width: 200rpx;
  text-align: center;
  margin: 0 auto 0 auto;
  height: 80rpx;
  color: #07C160;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: rgba(0, 0, 0, 0.03);
  font-size: 30rpx;
}

@media (prefers-color-scheme: dark) {
  Page {
    background-color: #111111;
  }

  .top_tip {
    color: rgba(255, 255, 255, 0.4);
  }

  .power {
    background-color: #191919;
  }

  .power_info_tip {
    color: rgba(255, 255, 255, 0.4);
  }

  .line {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .foot {
    color: rgba(255, 255, 255, 0.4)
  }

}